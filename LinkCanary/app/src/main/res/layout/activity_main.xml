<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/singleton_memoryleak"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Singleton MemoryLeak Activity" />

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/inner_class_memoryleak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inner Class Memoryleak Activity" />

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/post_runnable_memoryleak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Post Runnable Activity" />

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/thead_runnable_memoryleak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thread Runnable MemoryLeak Activity" />

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/local_ver_memoryleak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="loack Variable MemoryLeak Activity" />

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/broadcast_reciver_memoryleak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BroadCastReciver MemoryLeak Activity" />

</LinearLayout>
